<?xml version = '1.0' encoding = 'UTF-8'?>  
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">  
      
<hibernate-configuration>
 
    <session-factory> 
     
        <property name = "hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>  
        <property name = "hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name = "hibernate.connection.url">jdbc:mysql://localhost/campus_management</property>  
        <property name = "hibernate.connection.username">root</property>  
        <property name = "hibernate.connection.password">root</property>
        <property name = "show_sql">true</property>   
                  
        <mapping class="com.i2i.model.User"/>
        <mapping class="com.i2i.model.Role"/>
        <mapping class="com.i2i.model.Address"/>
        <mapping class="com.i2i.model.Student"/>
        <mapping class="com.i2i.model.Subject"/>
        <mapping class="com.i2i.model.Teacher"/>
        <mapping class="com.i2i.model.Standard"/>
        <mapping class="com.i2i.model.Period"/>
        <mapping class="com.i2i.model.PeriodSubjectDetail"/>    
        
    </session-factory>
      
</hibernate-configuration>  
